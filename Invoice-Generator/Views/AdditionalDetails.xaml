<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Invoice_Generator.ViewModels"
             x:Class="Invoice_Generator.Views.AdditionalDetails"
             x:DataType="local:AdditionalDetailsViewModel">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Finish"
                     IconImageSource=""
                     Command="{Binding FinishCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid RowDefinitions="Auto, Auto"
              Padding="50"
              RowSpacing="50">
            
            <Label Text="When is the customer being invoiced?"/>

            <DatePicker Grid.Row="1"
                        MinimumDate="01/01/2000"
                        MaximumDate="12/31/2040"
                        Date="{Binding InvoiceDate}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>